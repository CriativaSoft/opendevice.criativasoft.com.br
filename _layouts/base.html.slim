    |function googleTranslateElementInit() {
    |  new google.translate.TranslateElement({pageLanguage: 'en', includedLanguages: 'es,pt,zh-CN', layout: google.translate.TranslateElement.InlineLayout.SIMPLE, gaTrack: true, gaId: 'UA-52975804-2'}, 'google_translate_element');
    |}
  script src="http://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"
